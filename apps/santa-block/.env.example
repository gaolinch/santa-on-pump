# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=0.0.0.0

# Solana RPC (Primary and Fallback)
RPC_URL_PRIMARY=https://api.mainnet-beta.solana.com
RPC_URL_FALLBACK=https://api.mainnet-beta.solana.com
RPC_DEVNET_URL=https://api.devnet.solana.com
SOLANA_NETWORK=mainnet-beta

# Santa Token Configuration
SANTA_TOKEN_MINT=
SANTA_TREASURY_WALLET=
SANTA_DECIMALS=9

# Multi-sig Configuration (Squads)
MULTISIG_ADDRESS=
MULTISIG_THRESHOLD=3
MULTISIG_SIGNERS=5

# Database
DATABASE_URL=postgresql://santa:santa@localhost:5432/santa
DB_HOST=localhost
DB_PORT=5432
DB_NAME=santa
DB_USER=santa
DB_PASSWORD=santa
DB_SSL=false

# Security
ADMIN_API_KEY=your-secure-admin-key-change-this
ADMIN_IP_WHITELIST=127.0.0.1,::1

# X (Twitter) Bot Configuration (Optional)
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=
X_POST_HOOK_SECRET=

# Gifts Configuration
GIFTS_HASH_FILE=./data/gifts-hash.json
GIFTS_FULL_FILE=./data/gifts-full.json
GIFTS_SALT=your-random-salt-string-change-this

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=

# Schedule (UTC)
DAILY_CLOSE_CRON=5 0 * * *